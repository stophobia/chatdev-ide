run = "vite"
hidden = [".config", "yarn.lock", "tsconfig.json"]

[packager]
language = "nodejs"
  [packager.features]
  enabledForHosting = false
  packageSearch = true
  guessImports = true

[nix]
channel = "stable-22_11"

[env]
YARN_CONFIG_HOME = "$REPL_HOME/.config"
PATH = "$REPL_HOME/node_modules/.bin:$REPL_HOME/.config/yarn/global/bin"
yarn_global_prefix = "$REPL_HOME/.config/yarn/global"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[languages]
  [languages.typescript]
  pattern = "**/{*.ts,*.js,*.tsx,*.jsx,*.json}"
    [languages.typescript.languageServer]
    start = "typescript-language-server --stdio"

[deployment]
run = ["sh", "-c", "yarn start"]
deploymentTarget = "cloudrun"
ignorePorts = false
